<resources>
    <!-- Estilo para o título -->
    <style name="TitleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#84A9AC</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo para os campos de entrada (EditText) -->
    <style name="InputFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:backgroundTint">#D4F1F4</item>
        <item name="android:hintTextColor">#B0BEC5</item>
        <item name="android:textColor">#37474F</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Estilo para os botões -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">#84A9AC</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- Estilo para o EditText multi-line (História) -->
    <style name="MultiLineInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:minLines">3</item>
        <item name="android:gravity">top</item>
        <item name="android:backgroundTint">#D4F1F4</item>
        <item name="android:hintTextColor">#B0BEC5</item>
        <item name="android:textColor">#37474F</item>

    </style>
</resources>
