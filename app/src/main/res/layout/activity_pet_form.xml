<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <!-- Campo Nome -->
        <EditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="textPersonName" />

        <!-- Campo Raça -->
        <EditText
            android:id="@+id/et_raca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Raça"
            android:inputType="text" />

        <!-- Campo Porte da Raça -->
        <EditText
            android:id="@+id/et_porte_raca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Porte da Raça"
            android:inputType="text" />

        <!-- Campo Sexo -->
        <EditText
            android:id="@+id/et_sexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sexo"
            android:inputType="text" />

        <!-- Campo Cor -->
        <EditText
            android:id="@+id/et_cor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cor"
            android:inputType="text" />

        <!-- Campo Idade -->
        <EditText
            android:id="@+id/et_idade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Idade"
            android:inputType="number" />

        <!-- Campo História -->
        <EditText
            android:id="@+id/et_historia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="História"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <!-- Imagem do Pet -->
        <ImageView
            android:id="@+id/iv_pet_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagem do Pet"
            android:layout_marginTop="16dp"
            />

        <!-- Botão Carregar Foto -->
        <Button
            android:id="@+id/btn_carregar_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carregar Foto"
            android:layout_marginTop="8dp" />

        <!-- Botão Salvar -->
        <Button
            android:id="@+id/btn_salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:layout_marginTop="8dp" />

        <!-- Botão Editar -->
        <Button
            android:id="@+id/btn_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:layout_marginTop="8dp" />

        <!-- Botão Deletar -->
        <Button
            android:id="@+id/btn_deletar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deletar"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF" />

        <!-- Botão Voltar -->
        <Button
            android:id="@+id/btn_voltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
