<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetFormActivity">
    <?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/tv_title"
                style="@style/TitleTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salva Pets"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Imagem -->
            <ImageView
                android:id="@+id/iv_pet_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:contentDescription="Imagem do Pet"
                android:src="@drawable/imagem" />

            <!-- Nome -->
            <EditText
                android:id="@+id/et_nome"
                style="@style/InputFieldStyle"
                android:hint="Nome" />

            <!-- Raça -->
            <EditText
                android:id="@+id/et_raca"
                style="@style/InputFieldStyle"
                android:hint="Raça" />

            <!-- Porte -->
            <EditText
                android:id="@+id/et_porte_raca"
                style="@style/InputFieldStyle"
                android:hint="Porte" />

            <!-- Sexo -->
            <EditText
                android:id="@+id/et_sexo"
                style="@style/InputFieldStyle"
                android:hint="Sexo" />

            <!-- Cor -->
            <EditText
                android:id="@+id/et_cor"
                style="@style/InputFieldStyle"
                android:hint="Cor" />

            <!-- Idade -->
            <EditText
                android:id="@+id/et_idade"
                style="@style/InputFieldStyle"
                android:hint="Idade" />

            <!-- História -->
            <EditText
                android:id="@+id/et_historia"
                style="@style/MultiLineInputStyle"
                android:hint="História do Pet" />

            <!-- Botões -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_voltar"
                    style="@style/ButtonStyle"
                    android:text="Voltar" />

                <Button
                    android:id="@+id/btn_editar"
                    style="@style/ButtonStyle"
                    android:text="Editar" />

                <Button
                    android:id="@+id/btn_salvar"
                    style="@style/ButtonStyle"
                    android:text="Salvar" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>