<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:background="@drawable/corner_cards"
    android:elevation="4dp"
    android:layout_margin="8dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/imageViewPet"
        android:layout_width="102dp"
        android:layout_height="110dp"
        android:background="@drawable/corner_imagens"
        android:contentDescription="@string/imagem_pet"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/textViewPetNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Nome do Pet"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPetRaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="RaÃ§a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewPetIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Idade"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnAdotar"
            android:layout_width="179dp"
            android:layout_height="38dp"
            android:backgroundTint="#F44336"
            android:drawableLeft="@drawable/coracao"
            android:text="Quero Adotar" />


    </LinearLayout>

</LinearLayout>
