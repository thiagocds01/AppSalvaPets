<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:background="@drawable/corner_cards"
    android:elevation="4dp"
    android:layout_margin="8dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/imageViewPet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:background="@drawable/corner_imagens"
        android:contentDescription="@string/imagem_pet"  />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/textViewPetNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Pet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/textViewPetRaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RaÃ§a"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textViewPetIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btnAdotar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quero Adotar" />


    </LinearLayout>

</LinearLayout>
